<?xml version="1.0" encoding="utf-8"?>


                                                       
                                                   


    
                 
                         
                                                              
           


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" android:tag="layout/fragment_search_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/corner_layout"
            android:layout_margin="10dp"
            android:elevation="3dp"
            app:iconifiedByDefault="false"
            app:queryHint="검색어를 입력하시오"
            app:layout_constraintBottom_toTopOf="@id/search_post"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:queryBackground="@null"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_post"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/corner_layout"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:elevation="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search" />

    </androidx.constraintlayout.widget.ConstraintLayout>
         